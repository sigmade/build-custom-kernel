Edit /etc/default/grub

# GRUB_HIDDEN_TIMEOUT=10
# GRUB_HIDDEN_TIMEOUT_QUIET=true
GRUB_TIMEOUT=10

sudo update-grub

sudo apt-get -y install git gcc make bc fakeroot dpkg-dev libncurses5-dev libssl-dev
  
wget https://cdn.kernel.org/pub/linux/kernel/v4.x/linux-4.4.269.tar.xz  //LTS for 16.04

tar -Jxvf linux-4.4.269.tar.xz

cd linux-4.4.269

make menuconfig

Disable:

    General setup:
    System V IPC
    Support for paging of anonymous memmory (swap)
    
    File system:
    reiserfs
    jfs
    gfs2
    ocfs2
    btrfs
    nilfs2
    f2fs
    
    Processor type and features:
    Maximum number of CPUs
    AMD
    Supported processor vendors
    
    Device Drivers:
    Sound Card
    Video  Card
    IDE, Floppy
    Macintosh
    Multimedia Support --
    Chrome
       

make -j4 bindeb-pkg LOCALVERSION=-sigmade
 
 Startup finished in 10.381s (kernel) + 4.257s (userspace) = 14.638s
 cd ..
 sudo dpkg -i     // all but dbg
 
 
 ----Delete old kernel----
  
 rm -r /lib/modules/4.4.0-210-generic/
 apt-get -y purge linux-headers-4.4.0-210
 apt-get purge -y linux-modules-4.4.0-210-generic
 sudo apt -y autoremove
 
 --Test--
 systemd-analyze time

